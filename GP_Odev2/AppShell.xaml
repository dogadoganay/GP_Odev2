<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GP_Odev2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GP_Odev2"
    Title="GP_Odev2"
    FlyoutBehavior="Flyout">


    <!-- Hamburger (flyout) menümüzü oluşturduğum ve iconları eklediğim kısım-->
    <Shell.FlyoutHeader>
        <Grid HeightRequest="30" />
    </Shell.FlyoutHeader>
    <!-- yukarıdan menüye boşluk verdim -->

    <FlyoutItem Title="Ana Sayfa" Route="AnaSayfaRoute" Icon="home.png">
        <ShellContent ContentTemplate="{DataTemplate local:AnaSayfa}" />
    </FlyoutItem>

    <FlyoutItem Title="Kredi Hesaplama" Route="KrediHesaplamaRoute" Icon="loan_calculator.png">
        <ShellContent ContentTemplate="{DataTemplate local:KrediHesaplamaSayfasi}" />
    </FlyoutItem>

    <FlyoutItem Title="Vücut Kitle İndeksi" Route="VKIHesaplamaRoute" Icon="health_calendar.png">
        <ShellContent ContentTemplate="{DataTemplate local:VKIHesaplamaSayfasi}" />
    </FlyoutItem>

    <FlyoutItem Title="Renk Seçici" Route="RenkSeciciRoute" Icon="image_colors.png">
        <ShellContent ContentTemplate="{DataTemplate local:RenkSeciciSayfasi}" />
    </FlyoutItem>


</Shell>
